    classes="cgd-custom"}}
    {{formGroup systemFields.maxBonus value=system.maxBonus disabled=system.playMode
    classes="cgd-custom"}}
    {{formGroup systemFields.maxManeuverability value=system.maxManeuverability disabled=system.playMode
    classes="cgd-custom"}}
    {{formGroup systemFields.armor value=system.armor disabled=system.playMode
    classes="cgd-custom"}}
    {{formGroup systemFields.range value=system.range disabled=system.playMode
    classes="cgd-custom"}}
    {{formGroup systemFields.passengers value=system.passengers disabled=system.playMode
    classes="cgd-custom"}}
    {{formGroup systemFields.slots value=system.slots disabled=system.playMode
    classes="cgd-custom"}}
    {{formGroup systemFields.tech value=system.tech disabled=system.playMode localize=true
    classes="cgd-custom"}}
