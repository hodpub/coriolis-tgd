<section class='tab notes {{tab.cssClass}}' data-group='primary' data-tab='notes'>
<div class="grid grid-1col grid-gap-5">
  <div class="input-with-circle-title-small">
    <label>{{localize "CORIOLIS_TGD.Actor.Vehicle.FIELDS.notes.label"}}</label>
    {{#if editable}}
      <prose-mirror name="system.notes" data-document-uuid="{{actor.uuid}}"
        value="{{system.notes}}" collaborate="true" toggled="true" style="height: 272px;" {{disabled system.playMode}}>
        {{{enrichedNotes}}}
      </prose-mirror>
    {{else}} {{{enrichedNotes}}}
    {{/if}}
  </div>
</div>
</section>
